{% extends '/partials/_base.twig' %}

{% block content %}

    {% include '/partials/header/_nav.twig' %}

    <header class="w-full bg-navy h-64 relative flex flex-row justify-center items-center">
        <div class="absolute w-full h-full bg-navy bg-opacity-50"></div>
        <img class="absolute h-full" src="/assets/img/header-logo-overlay.svg" alt="{{ category.title }}">
        <h1 class="text-5xl text-white font-bold relative">{{ category.title }}</h1>
    </header>

    <section class="border-b border-light_grey">
        <div class="lg:relative py-16 lg:py-24">
            <div class="max-w-7xl mx-auto px-4 sm:px-6">
                <div class="w-full lg:w-5/6 mx-auto">
                    <div class="w-full lg:w-3/4 plainText bg-white">
                        {{ category.productCategoryDescription | markdown }}
                    </div>
                    {% if category.benefitsMatrix | length %}
                        {% set benefits = category.benefitsMatrix.all() %}
                        <div class="flex flex-col justify-between mt-8 space-y-4 lg:space-y-0 lg:flex-row">
                        {% for benefit in benefits %}
                            <div class="flex flex-row items-center">
                                <div class="rounded-full border-2 border-navy mr-4 p-2 w-16 h-16 flex flex-row justify-center items-center">
                                    <i class="{{ benefit.icon }} absolute text-mustard text-3xl"></i>
                                </div>
                                <p class="uppercase text-navy m-0 font-bold">{{ benefit.benefit }}</p>
                            </div>
                        {% endfor %}
                        </div>
                    {% endif %}
                </div>
            </div>
        </div>
    </section>

    <section>
        <div class="lg:relative py-16 lg:py-24 bg-white">
            <div class="max-w-7xl mx-auto px-4 sm:px-6">
                <div class="w-full lg:w-5/6 mx-auto">
                    <div class="w-full lg:w-3/4 plainText bg-white">
                        {{ category.productOverview | markdown }}
                    </div>

                    {% set entries = craft.entries()
                        .relatedTo(category)
                        .all() %}

                    <div class="grid gap-8 max-w-lg mx-auto mt-8 lg:grid-cols-4 lg:max-w-none">
                        {% for product in entries %}
                            <div class="flex flex-col overflow-hidden">
                                <div class="flex-shrink-0 mb-8">
                                    {% set image = product.seoImage.one() %}
                                    <a href="{{ product.url }}">
                                        <img class="h-48 w-full object-cover" src="{{ image.url }}" alt="{{ image.title }}">
                                    </a>
                                </div>
                                <div class="flex-1 bg-white flex flex-col justify-between">
                                    <div class="flex-1">
                                        <a href="{{ product.url }}" class="block">
                                            <h3 class="mt-2 text-xl leading-7 font-semibold text-gray-900">
                                                {{ product.title }}
                                            </h3>
                                            <p class="mt-3 mb-4 opacity-75">
                                                {{ product.seoDescription }}
                                            </p>
                                        </a>
                                    </div>
                                    <a class="inline-flex w-2/3 uppercase items-center justify-center px-8 py-2 border border-navy leading-6 font-medium rounded-md text-navy font-bold text-sm hover:bg-navy hover:text-white transition ease-in-out duration-500" href="{{ product.url }}">Learn more</a>
                                </div>
                            </div>
                        {% endfor %}
                    </div>
                </div>
            </div>
        </div>
    </section>

{#    {% if category.relatedProducts | length %}#}
{#        {% include 'blocks/partials/_relatedProducts.twig' %}#}
{#    {% endif %}#}

    {% include 'partials/footer/_footer.twig' %}

{% endblock %}