    <div class="lg:relative bg-navy py-16 lg:py-24">
        <img src="/assets/img/coal-header.jpg" class="absolute h-full w-full object-cover inset-0" alt="Coal header">
        <div class="w-full h-full bg-navy bg-opacity-50 absolute inset-0"></div>
        <div class="max-w-7xl mx-auto px-4 sm:px-6 relative">
            <div class="w-full lg:w-5/6 mx-auto">
                <div class="w-full text-center">
                    <h2 class="text-3xl tracking-tight leading-10 mb-8 font-extrabold text-white sm:text-4xl sm:leading-none md:text-5xl lg:text-4xl xl:text-5xl">
                        Resources
                    </h2>
                </div>
            </div>
        </div>
    </div>

    <div class="lg:relative bg-white py-16 lg:py-24">
