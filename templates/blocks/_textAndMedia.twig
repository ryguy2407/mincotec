<div id="{{ block.idSlug }}" class="relative textAndMedia {{ block.backgroundColour }}">
    <div data-aos-duration="1000" data-aos="{% if block.mediaAlignment == 'left' %}fade-right{% else %}fade-left{% endif %}" class="hidden md:block h-56 sm:h-64 md:absolute md:{{ block.mediaAlignment }}-0 md:h-full md:{{ block.mediaWidth }}">
        {% if block.image | length %}
            {% set img = block.image.one().optimizedimages %}
            {% set originalImg = block.image.one() %}
            <img src="{{ img.src() }}"
                 alt="{{ originalImg.title }}"
                 class="w-full h-full object-cover"
                 srcset="{{ img.srcset() }}"
                 sizes="100vw" />
        {% endif %}
    </div>
    <div data-aos-duration="1000" data-aos="{% if block.mediaAlignment == 'left' %}fade-left{% else %}fade-right{% endif %}" class="relative max-w-screen-xl mx-auto px-4 py-12 sm:px-6 lg:px-8 lg:py-24">
        <div class="w-full mx-auto">
            <div class="{% if block.mediaAlignment == 'left' %}md:ml-auto{% endif %} {% if block.mediaWidth == 'w-1/2'%}md:w-5/12{% elseif block.mediaWidth == 'w-1/3' %}md:w-2/3{% else %}md:w-3/4{% endif %}">
                {{ block.text | markdown }}
                {% if block.linkUrl %}
                    <div class="mt-8">
                        <a href="{{ block.linkUrl }}" class="btn-white {% if block.backgroundColour == 'bg-white' %}border-navy{% else %}border-white{% endif %}">
                            {{ block.linkText }}
                        </a>
                    </div>
                {% endif %}
            </div>
        </div>
    </div>
    <div class="block md:hidden h-56 sm:h-64 md:absolute md:{{ block.mediaAlignment }}-0 md:h-full md:w-2/6">
        {% if block.image | length %}
            {% set img = block.image.one().optimizedimages %}
            {% set originalImg = block.image.one() %}
            <img src="{{ img.src() }}"
                 alt="{{ originalImg.title }}"
                 class="w-full h-full object-cover"
                 srcset="{{ img.srcset() }}"
                 sizes="100vw" />
        {% endif %}
    </div>
</div>